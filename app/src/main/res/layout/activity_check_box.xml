<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zxl.mydailytest.CheckBoxActivity">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginLeft="3dp"
            android:background="#f00"
            android:layout_width="2dp"
            android:layout_height="25dp"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:text="普通样式"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <CheckBox
        android:layout_marginTop="5dp"
        android:checked="true"
        android:layout_marginLeft="8dp"
        android:text="普通样式"
        android:textSize="14sp"
        android:textColor= "#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginLeft="3dp"
            android:background="#f00"
            android:layout_width="2dp"
            android:layout_height="25dp"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:text="属性1-改变theme"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <CheckBox
        android:layout_marginTop="5dp"
        android:checked="true"
        android:layout_marginLeft="8dp"
        android:text="改变主题"
        android:textSize="14sp"
        android:textColor= "#000"
        android:theme="@style/MyCheckBoxGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginLeft="3dp"
            android:background="#f00"
            android:layout_width="2dp"
            android:layout_height="25dp"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:text="属性2-改变button"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <CheckBox
        android:layout_marginTop="5dp"
        style="@style/CustomCheckboxTheme"
        android:checked="true"
        android:layout_marginLeft="10dp"
        android:text="改变button"
        android:textSize="14sp"
        android:textColor= "#000"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/rlCheck"
        android:background="#9f00"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:text="2020年快乐"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!-- clickable = false -->
        <CheckBox
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:layout_centerVertical="true"
            android:id="@+id/innerCheck"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/linear"
        android:orientation="horizontal"
        android:background="@color/color_green"
        android:layout_width="match_parent"
        android:layout_height="40dp">
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/color_hot_city"
        android:layout_width="match_parent"
        android:layout_height="40dp"></LinearLayout>
</LinearLayout>